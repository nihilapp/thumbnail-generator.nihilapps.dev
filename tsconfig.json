{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ESNext",
    "esModuleInterop": true,
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.d.ts",
    "./src/**/*",
    "build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
